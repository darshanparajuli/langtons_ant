{
    "version": "0.1.0",
    "isShellCommand": true,
    "command": "sh",
    "args": [
        "-c"
    ],
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build",
            "isBuildCommand": true,
            "args": [
                "make"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "clean",
            "args": [
                "make clean"
            ]
        },
        {
            "taskName": "run",
            "args": [
                "make run"
            ]
        },
        {
            "taskName": "rebuild"
        }
    ]
}